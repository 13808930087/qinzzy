<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.situ.jingbao.dao.ListDao">
    <resultMap id="ListMap" type="Goods">
        <id column="goods_id" property="goodsId"/>
        <result column="goods_name" property="goodsName"/>
        <result column="goods_hover_img" property="goodsHoverImg"/>
        <result column="goods_first_img" property="goodsFirstImg"/>
        <result column="goods_discount" property="goodsDiscount"/>
        <result column="goods_price" property="goodsPrice"/>
        <result column="goods_level" property="goodsLevel"/>
        <result column="goods_new" property="goodsNew"/>
    </resultMap>
    <select id="findAll" resultMap="ListMap" parameterType="Goods">
        SELECT goods_id, goods_name, goods_hover_img,goods_first_img,goods_discount,goods_price,goods_level,goods_new
        from t_goods
        <where>
            <if test="goods.goodsId!=null">
                and goods_id = #{goods.goodsId}
            </if>
            <if test="goods.categoryId!=null">
                and category_id = #{goods.categoryId}
            </if>
            <if test="goods.goodsName!=null and goods.goodsName!=''">
                <bind name="goodsName" value="'%'+goods.goodsName+'%'"/>
                and goods_name like #{goodsName}
            </if>
            <if test="goods.goodsLevel!=null">
                and goods_level &gt;= #{goods.goodsLevel}
            </if>
            <if test="goods.goodsNew!=null">
                and goods_new = #{goods.goodsNew}
            </if>
        </where>
    </select>
    <resultMap id="TitleMap" type="Title">
        <id column="title_id" property="titleId"/>
        <result column="title_name" property="titleName"/>
    </resultMap>
    <select id="findId" resultMap="TitleMap" parameterType="java.lang.String">
        SELECT title_id,title_name
        from t_title
        where title_name=#{categoryName}
    </select>
</mapper>
