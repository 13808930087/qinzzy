<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.situ.jingbao.dao.TitleDao">
    <resultMap id="TitleMap" type="Title">
        <id column="title_id" property="titleId"/>
        <result column="title_name" property="titleName"/>
        <result column="parent_id" property="parentId"/>
        <result column="title_level" property="titleLevel"/>
        <result column="title_small_img" property="titleSmallImg"/>
        <result column="title_big_img" property="titleBigImg"/>
        <result column="title_four_img" property="titleFourImg"/>
        <association property="titles" column="title_id" select="getSonTitle"/>
    </resultMap>
    <select id="getAllTitle" resultMap="TitleMap">
        SELECT title_id, title_name, parent_id,title_level,title_small_img,title_big_img,title_four_img
        from t_title
        where parent_id = 0
    </select>

    <select id="getSonTitle" resultMap="TitleMap" parameterType="java.lang.Integer">
        SELECT title_id, title_name, parent_id,title_level,title_small_img,title_big_img,title_four_img
        from t_title
        where parent_id = #{titleId}
    </select>
    <select id="getTitle" resultMap="TitleMap" parameterType="java.lang.Integer">
        SELECT title_id, title_name, parent_id,title_level,title_small_img,title_big_img,title_four_img
        from t_title
        where title_id = #{titleId}
    </select>
</mapper>
