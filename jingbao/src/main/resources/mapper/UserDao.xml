<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.situ.jingbao.dao.UserDao">
    <resultMap id="CustomerMap" type="Customer">
        <id column="customer_id" property="customerId"/>
        <result column="customer_name" property="customerName"/>
        <result column="sex" property="sex"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="province" property="province"/>
        <result column="city" property="city"/>
        <result column="area" property="area"/>

    </resultMap>
    <select id="getCustomer" resultMap="CustomerMap" parameterType="java.lang.Integer">
        SELECT customer_id,
               customer_name,
               province,
               city,
               area,
               phone,
               sex,
               email
        from t_customer
        where customer_id = #{customerId}
    </select>
    <update id="editUser" parameterType="User">
        update t_user
        set nickname=#{user.nickname},
            gravatar_img=#{user.gravatarImg}
        where customer_id = #{user.customerId}
    </update>
    <update id="editCustomer" parameterType="Customer">
        update t_customer
        set sex=#{customer.sex},
            customer_name=#{customer.customerName},
            email=#{customer.email},
            phone=#{customer.phone}
        where customer_id = #{customer.customerId}
    </update>


    <resultMap id="CartMap" type="Cart">
        <id column="cart_id" property="cartId"/>
        <result column="customer_id" property="customerId"/>
        <result column="goods_img" property="goodsImg"/>
        <result column="goods_id" property="goodsId"/>
        <result column="goods_num" property="goodsNum"/>
        <result column="goods_name" property="goodsName"/>
        <result column="total" property="total"/>
        <result column="goods_price" property="goodsPrice"/>
    </resultMap>

    <select id="getCart" resultMap="CartMap" parameterType="java.lang.Integer">
        SELECT cart_id,
               customer_id,
               goods_img,
               goods_id,
               goods_num,
               goods_name,
               total,
               goods_price
        from t_cart
        where customer_id = #{customerId}
    </select>
    <insert id="addCart" parameterType="java.util.Map">
        insert into t_cart(customer_id, goods_img, goods_id, goods_num, goods_name, goods_price, total)
        values (#{cart.customerId},#{cart.goodsImg},#{cart.goodsId},#{cart.goodsNum},#{cart.goodsName},#{cart.goodsPrice},#{cart.total});
    </insert>
    <update id="updateCartGoodsNum" parameterType="java.lang.Integer">
        update t_cart set goods_num=#{goodsNum}  where cart_id=#{cart.customerId}
    </update>


    <!--    <resultMap id="AddressMap" type="Address">-->

    <!--    </resultMap>-->
